%% circular convolution   
clc; clear all;  
  x = input("first sequence: ")
  h = input("second sequence: ")
  N = input("N value: ")
  x = [x zeros(1,(N-length(x)))]
   h = [h zeros(1,(N-length(h)))]
   y = zeros(1,N)
   for n= 0:N-1
      
       for m=0:N-1
           z = mod(m - n, N);
           y(n+1) = y(n+1) + x(m+1).*h(z+1);
           
       end
      end
   y
 %% tabular array 
 x = input("first sequence: ")
  h = input("second sequence: ")
  N = input("N value: ")
  x = [x zeros(1,(N-length(x)))]
  
   h = [h zeros(1,(N-length(h)))]
   y = zeros(1,N)
   for i = 1:N
       y(i)=[h(i:-1:1) h(N:-1:i+1)]*x';
   end
   y
